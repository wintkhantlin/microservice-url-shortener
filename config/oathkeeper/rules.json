[
  {
    "id": "management-api",
    "upstream": {
      "url": "http://management:8001"
    },
    "match": {
      "url": "http://localhost:4455/api/management/<**>",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "authenticators": [
      {
        "handler": "cookie_session"
      }
    ],
    "authorizer": {
      "handler": "allow",
      "config": {}
    },
    "mutators": [
      {
        "handler": "header",
        "config": {}
      }
    ],
    "rewrite": [
      {
        "reg_exp": "/api/management/(.*)",
        "replace": "/$1"
      }
    ]
  },
  {
    "id": "analytics-api",
    "upstream": {
      "url": "http://analytics:8080"
    },
    "match": {
      "url": "http://localhost:4455/api/analytics/<**>",
      "methods": ["GET"]
    },
    "authenticators": [
      {
        "handler": "cookie_session"
      }
    ],
    "authorizer": {
      "handler": "allow",
      "config": {}
    },
    "mutators": [
      {
        "handler": "header",
        "config": {}
      }
    ],
    "rewrite": [
      {
        "reg_exp": "/api/analytics/(.*)",
        "replace": "/$1"
      }
    ]
  },
  {
    "id": "kratos-public",
    "upstream": {
      "url": "http://kratos:4433"
    },
    "match": {
      "url": "http://localhost:4455/auth/<**>",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "allow",
      "config": {}
    },
    "mutators": [
      {
        "handler": "noop",
        "config": {}
      }
    ],
    "rewrite": [
      {
        "reg_exp": "/auth/(.*)",
        "replace": "/$1"
      }
    ]
  }
]
